<h1>Displaying all the Todos</h1>

<p><%=link_to "Create a Todo" , new_todo_path%>

<table> 
    <tr>
    <th>Name</th>
    <th>description</th>
    </tr>

    <%@todo.each do |todo|%>
    <tr>
        <td><%=todo.name%></td> 
        <td><%=todo.description%></td>
        <td><%=link_to "Edit",edit_todo_path(todo)%></td> 
        <td><%=link_to "Show",todo_path(todo)%></td>
        <td><%= button_to "Delete", todo_path(todo), data: { confirm: "Are you sure?" },method: :delete %> </td>
        


    <%end%>
</table>

    </tr>

    <% flash.each do |name,msg|%>
    <ul>
    <li><%=msg%></li>
    </ul>
    <%end%>
